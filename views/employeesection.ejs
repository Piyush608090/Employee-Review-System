<!DOCTYPE html>
<html>
    <head>
        <head>
            <title>Employee Review System</title>
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="/adminview">Employee Review System</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                  <ul class="navbar-nav">
                    <li class="nav-item">
                      <a class="nav-link" href="#">Hello Admin</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="/review/assignwork">Assign Work</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link disabled" href="/employeesection/employeelist">Employee Section</a>
                      </li>
                    <li class="nav-item">
                      <a class="nav-link disabled" href="/logout">signout</a>
                    </li>
                  </ul>
                </div>
              </nav>
              </head>
        </head>
        <body>
<div id="main-div">
    <h1>All Employees List</h1>
    <hr>
    <div id="headings">
        <p>Name</p>
        <p>Email</p>
        <p>Password</p>
    </div>
    <hr>

    <%for(let user of users){%>

    <form action="/employeesection/employee/update/<%=user.id%>" method="POST">
            <input type="text" name="name" placeholder="Name" value="<%=user.name%>" required>
            <input type="email" name="email" placeholder="Email" value="<%=user.email%>" required>
            <input type="text" name="password" placeholder="Password" value="<%=user.password%>" required>
            <button type="submit" style="cursor: pointer;">Update</button>
            <button type="button"><a href="/employeesection/employee/delete/<%=user.id%>">Delete</a></button>
            <% if (user.permission === "Admin") { %>
              <button type="button">
                  <a href="/employeesection/employee/permission/<%=user.id%>"> Remove Admin</a>
              </button>
          <% } else { %>
              <button type="button">
                  <a href="/employeesection/employee/permission/<%=user.id%>">Make Admin</a>
              </button>
          <% } %>
          </form>
          <% } %>
          
</div>
</body>
<style>
body {
    background-image: url("/images/656685.jpg");
    background-size: cover;
    overflow-y: scroll;
    text-align: left;
  }
  
  .layout-main {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  #main-div {
    margin-top: 2%;
    width: 90%;
    background-image: linear-gradient(to right, #F1FFFF, #FEFBF1);
    border: 1px solid #EFEFEF;
    padding-bottom: 1%;
  }
  #main-div #headings {
    width: 100%;
    height: 3vh;
    display: flex;
  }
  #main-div #headings p {
    margin: 0;
    margin-left: 3%;
    margin-right: 11%;
  }
  #main-div h1 {
    text-align: center;
  }
  #main-div form {
    display: flex;
    justify-content: space-evenly;
    padding: 1%;
  }
  #main-div input {
    width: 15%;
  }
  #main-div button {
    width: 8%;
    height: 2em;
    font-size: 12px;
    border-radius: 50px;
    background-color: #E8576B;
    border: none;
    color: white;
  }
  #main-div a {
    color: white;
  }
  </style>
  </html>